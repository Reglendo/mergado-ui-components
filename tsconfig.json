{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": false,
        "silent": true,
        "reportFiles": [
            "src/**/*.{js,ts,tsx}"
        ]
    }
}
